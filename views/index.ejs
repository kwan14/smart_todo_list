  const row = $("div")
    .addClass("row");
  const col = $("div")
    .addClass("col");
  const listBox = $("div")
    .addClass("<%="todo-list-" + key%> todo-list");
  const boxHeader = $("div")
    .addClass("text-center")
  const boxHeading = $("h5")
    .addClass("<%=categories[key].name%>"); -->

        </div>
      </div>
    </div>
  </main>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Login</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="login-form">
        <input class="item type="number" placeholder="ID"><br>
        <!-- <input class="item type="text" placeholder="Email"><br> -->
        <!-- <input class="item" type="text" placeholder="Password"> -->
        <button class="login-button item" type="submit">Login</button>
      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

</body>

</html>
